mixin menu(menu)
  .menu(id="menu")
    .container
      .menu__header
        .page-header__toggle
          button.page-header__toggle-btn(aria-label="Кнопка открытие, закрытие меню"  data-fancybox-close)
            span
        .page-header__left
          a.logo.page-header__logo(href="index.html")
            img(src="img/icon/logo-wh.svg", alt="White Rabbit cтудия отбеливания зубов")
          a.btn.btn--b-white.btn--location.btn--transparent.d-none.d-xl-inline-block(href="#modal-city" data-fancybox="")
            svg.btn__icon(width="15" height="15")
              use(href="img/symbols.svg#icon-location")
            span Уфа
        .page-header__right
          ul.social.page-header__social.d-none.d-xl-inline-block
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Facebook")
                svg(width="16", height="16")
                  use(href="img/symbols.svg#icon-instagram")
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Instagram")
                svg(width="16", height="16")
                  use(href="img/symbols.svg#icon-whatsapp")
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Vkontakte")
                svg(width="18", height="16")
                  use(href="img/symbols.svg#icon-telegram")
          .phone-callback
            a.phone-callback__tel(href="tel:88007755807") 8 800 77 55 807
            button.phone-callback__btn(data-toggle="modal" data-target="#modal-callback") Заказать звонок
      nav.navigation
        ul.navigation__list
          li.navigation__item
            a.navigation__link(href="#stages" data-scroll="") Как происходит отбеливание
          li.navigation__item
            a.navigation__link(href="#bleach" data-scroll="") Степени отбеливания
          li.navigation__item
            a.navigation__link(href="#visiting" data-scroll="") Бонусы и подарки
          li.navigation__item
            a.navigation__link(href="#services" data-scroll="") Услуги студии
          li.navigation__item
            a.navigation__link(href="#result" data-scroll="") Результаты прцедуры
          li.navigation__item
            a.navigation__link(href="#catalog" data-scroll="") Продукция клиники
          li.navigation__item
            a.navigation__link(href="#news" data-scroll="") Полезные советы
          li.navigation__item
            a.navigation__link(href="#contact" data-scroll="") Контакты
        footer.menu__footer.d-xl-none
          a.btn.btn--b-white.btn--location.btn--transparent(href="#modal-city" data-fancybox="")
            svg.btn__icon(width="15" height="15")
              use(href="img/symbols.svg#icon-location")
            span Уфа
          ul.social
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Facebook")
                svg(width="16", height="16")
                  use(href="img/symbols.svg#icon-instagram")
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Instagram")
                svg(width="16", height="16")
                  use(href="img/symbols.svg#icon-whatsapp")
            li.social__item
              a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Vkontakte")
                svg(width="18", height="16")
                  use(href="img/symbols.svg#icon-telegram")
