mixin page-footer()
  footer.page-footer(id="contact")
    .container
      .page-footer__row.page-footer__row--center
        .page-footer__column.page-footer__column--md-2
          a.logo.page-footer__logo(href="index.html")
            img(src="img/icon/logo-wh.svg", alt="Косметическое  отбеливание  зубов в Уфе")
        .page-footer__column.page-footer__column--md-3
          .phone
            span.phone__text Телефон для записи
            a.phone__link(href="tel:88007755807") 8 800 77 55 807
            ul.phone__list-messager
              li.phone__messager Телефон
              li.phone__messager Whats’app
              li.phone__messager Telegram
        .page-footer__column.page-footer__column--md-1
          p.page-footer__address #[strong г. Уфа,] ул. Ленина 53, офис 505
          ul.social
            li.social__item
              a.social__link(href="#", target="_blank", aria-label="Социальная сеть Facebook")
                svg.social__icon(width="100%" height="100%")
                  use(xlink:href="img/symbols.svg#facebook")
            li.social__item
              a.social__link(href="#", target="_blank", aria-label="Социальная сеть Instagram")
                svg.social__icon(width="100%" height="100%")
                  use(xlink:href="img/symbols.svg#instagram")
            li.social__item
              a.social__link(href="#", target="_blank", aria-label="Социальная сеть Vkontakte")
                svg.social__icon(width="100%" height="100%")
                  use(xlink:href="img/symbols.svg#vk")
