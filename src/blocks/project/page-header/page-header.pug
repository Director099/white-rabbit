mixin page-header()
  header.page-header
    +menu()
    .page-header__toggle
      a.page-header__toggle-btn(href="#menu" aria-label="Кнопка открытие, закрытие меню" data-fancybox="menu" data-fancybox-close)
        span
    .page-header__left
      a.logo.page-header__logo(href="index.html")
        img(src="img/icon/logo-wh.svg", alt="White Rabbit cтудия отбеливания зубов")
      a.btn.btn--b-white.btn--location.btn--transparent.d-none.d-xl-inline-block(href="#modal-city" data-fancybox="")
        svg.btn__icon(width="15" height="15")
          use(href="img/symbols.svg#icon-location")
        span Уфа
    .page-header__right
      ul.social.page-header__social.d-none.d-xl-inline-block
        li.social__item
          a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Facebook")
            svg(width="16", height="16")
              use(href="img/symbols.svg#icon-instagram")
        li.social__item
          a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Instagram")
            svg(width="16", height="16")
              use(href="img/symbols.svg#icon-whatsapp")
        li.social__item
          a.social__link.social__link--circle(href="#", target="_blank", aria-label="Социальная сеть Vkontakte")
            svg(width="18", height="16")
              use(href="img/symbols.svg#icon-telegram")
      .phone-callback
        a.phone-callback__tel(href="tel:88007755807") 8 800 77 55 807
        button.phone-callback__btn(data-toggle="modal" data-target="#modal-callback") заказать звонок
