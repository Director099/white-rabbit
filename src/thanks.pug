extends pug/layout.pug

block meta
  title Страница благодарности
block header

block content
  main.order-page
    section.order-page__block
      img.order-page__img(src="img/content-img/page-thanks.png" alt="Страница благодарности")
      h1.title.order-page__title Спасибо за заявку!
      p.order-page__text В ближайшее время администратор свяжется с вами, а пока можете познакомиться и подписаться на наши соцсети:
      ul.social.order-page__social
        li.social__item
          a.social__link(href="#", target="_blank", aria-label="Социальная сеть Facebook")
            svg.social__icon(width="100%" height="100%")
              use(xlink:href="img/symbols.svg#facebook")
        li.social__item
          a.social__link(href="#", target="_blank", aria-label="Социальная сеть Instagram")
            svg.social__icon(width="100%" height="100%")
              use(xlink:href="img/symbols.svg#instagram")
        li.social__item
          a.social__link(href="#", target="_blank", aria-label="Социальная сеть Vkontakte")
            svg.social__icon(width="100%" height="100%")
              use(xlink:href="img/symbols.svg#vk")
      a.btn.btn--main.order-page__btn(href="/") На главную
block footer
